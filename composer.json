{
  "name": "changhorizon/content-collector",
  "type": "library",
  "license": "MIT",
  "description": "A safety-first Laravel crawler with task lifecycle, SSRF protection, and job-based architecture",
  "keywords": [
    "laravel",
    "crawler",
    "content-collector",
    "web-scraper",
    "job",
    "queue"
  ],
  "homepage": "https://github.com/changhorizon/content-collector",
  "support": {
    "issues": "https://github.com/changhorizon/content-collector/issues",
    "source": "https://github.com/changhorizon/content-collector"
  },
  "autoload": {
    "psr-4": {
      "ChangHorizon\\ContentCollector\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ChangHorizon\\ContentCollector\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "illuminate/support": "^12.0",
    "illuminate/queue": "^12.0",
    "illuminate/contracts": "^12.0",
    "guzzlehttp/guzzle": "^7.10",
    "symfony/dom-crawler": "^7.4"
  },
  "require-dev": {
    "orchestra/testbench": "^10.9",
    "phpunit/phpunit": "^11.5",
    "fakerphp/faker": "^1.24",
    "mockery/mockery": "^1.6",
    "friendsofphp/php-cs-fixer": "^3.93"
  },
  "scripts": {
    "test": "phpunit --testdox --stop-on-failure",
    "test:coverage": "XDEBUG_MODE=coverage phpunit --testdox --coverage-html .phpunit.coverage --coverage-filter ./src",
    "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --format=txt",
    "cs:chk": "composer run cs:fix -- --diff --dry-run"
  },
  "extra": {
    "laravel": {
      "providers": [
        "ChangHorizon\\ContentCollector\\ContentCollectorServiceProvider"
      ]
    }
  },
  "config": {
    "platform": {
      "php": "8.2"
    }
  },
  "prefer-stable": true
}
